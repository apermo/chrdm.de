{
	"name": "apermo/score-cards",
	"description": "Gutenberg blocks for card and board game score cards",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Apermo"
		}
	],
	"require": {
		"php": ">=8.3"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.5",
		"brain/monkey": "^2.6",
		"squizlabs/php_codesniffer": "^3.8",
		"inpsyde/php-coding-standards": "^2.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0"
	},
	"autoload": {
		"classmap": [
			"includes/"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Apermo\\ScoreCards\\Tests\\": "tests/php/"
		}
	},
	"scripts": {
		"test": "phpunit",
		"test:coverage": "phpunit --coverage-html tmp/coverage",
		"cs": "phpcs",
		"cs:fix": "phpcbf",
		"qa": [
			"@cs",
			"@test"
		]
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"sort-packages": true
	}
}
