{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "apermo-score-cards/phase10",
	"version": "1.0.0",
	"title": "Phase 10 Score Card",
	"category": "widgets",
	"icon": "editor-ol",
	"description": "Score card for Phase 10 card game. Track phases and penalty points.",
	"textdomain": "apermo-score-cards",
	"attributes": {
		"blockId": {
			"type": "string"
		},
		"playerIds": {
			"type": "array",
			"default": []
		},
		"customTitle": {
			"type": "string",
			"default": ""
		}
	},
	"usesContext": [ "postId" ],
	"providesContext": {
		"apermo-score-cards/blockId": "blockId",
		"apermo-score-cards/gameType": "phase10"
	},
	"supports": {
		"html": false,
		"align": [ "wide", "full" ]
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./editor.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}
