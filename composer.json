{
  "name": "chrdm/chrdm.de",
  "type": "project",
  "license": "proprietary",
  "description": "WordPress multisite for chrdm.de using Bedrock",
  "authors": [
    {
      "name": "chrdm",
      "email": "hello@chrdm.de"
    }
  ],
  "require": {
    "php": ">=8.3",
    "composer/installers": "^2.3",
    "vlucas/phpdotenv": "^5.6",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "^6.7",
    "roots/wp-config": "^1.0",
    "apermo/sovereignty": "^1.0",
    "wpackagist-plugin/activitypub": "^7.8",
    "wpackagist-plugin/antispam-bee": "^2.11",
    "wpackagist-plugin/basepress": "^2.17",
    "wpackagist-plugin/cachify": "^2.4",
    "wpackagist-plugin/code-block-pro": "^1.27",
    "wpackagist-plugin/contact-form-7": "^6.1",
    "wpackagist-plugin/embed-privacy": "^1.12",
    "wpackagist-plugin/wp-force-login": "^5.6",
    "wpackagist-plugin/friends": "^3.6",
    "wpackagist-plugin/gatherpress": "^0.32",
    "wpackagist-plugin/hum": "^1.3",
    "wpackagist-plugin/dominant-color-images": "^1.2",
    "wpackagist-plugin/individual-multisite-author": "^1.4",
    "wpackagist-plugin/webp-uploads": "^2.6",
    "wpackagist-plugin/multisite-language-switcher": "^2.10",
    "wpackagist-plugin/optimum-gravatar-cache": "^1.4",
    "wpackagist-plugin/performance-lab": "^4.0",
    "wpackagist-plugin/progress-planner": "^1.9",
    "wpackagist-plugin/speculation-rules": "^1.6",
    "wpackagist-plugin/wpdeepl": "^2.5",
    "wpackagist-plugin/two-factor": "^0.14",
    "wpackagist-plugin/wp-test-email": "^1.1",
    "wpackagist-plugin/duplicate-post": "^4.5",
    "wpackagist-plugin/wordpress-seo": "^26.8",
    "wpackagist-plugin/when-last-login": "^1.2",
    "wpackagist-theme/twentytwentyfive": "^1.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.10",
    "roave/security-advisories": "dev-latest"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    },
    {
      "type": "vcs",
      "url": "https://github.com/apermo/sovereignty"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "test": [
      "phpcs"
    ],
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ]
  }
}
